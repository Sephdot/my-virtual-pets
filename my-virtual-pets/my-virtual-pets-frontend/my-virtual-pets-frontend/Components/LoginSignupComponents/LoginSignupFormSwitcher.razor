@rendermode InteractiveServer

<div id="formcenter" class="robottext">
    @if (IsUser)
    {
          <LoginForm></LoginForm>
    }
    else
    {
            <SignupForm></SignupForm>
    }
    <a style="cursor: pointer; font-size: 12px; margin-top: 20px;" @onclick="ToggleForm">@(IsUser ?  SwitchText[0] : SwitchText[1])</a>
</div>

@code{
    public static string[] SwitchText = ["New here? Register now! →", "Been here before? Login! →"];

    public bool IsUser { get; set; } = true; 
    
    public void ToggleForm()
    {
        IsUser = !IsUser;
    }
    
}